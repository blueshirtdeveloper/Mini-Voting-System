    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug C app",
            "type": "cppdbg",
            "request": "launch",
            "externalConsole": true,
            "program": "${workspaceFolder}/build/run.out",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
          
            "MIMode": "lldb"
        },
        {
            "name": "C Launch",
            "type": "cppdbg",
            "request": "launch",
           "preLaunchTask": "make",
            "program": "${workspaceRoot}/build/run.out",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "externalConsole": true,
            "logging": { "trace": true, "traceResponse": true },
            "linux": {
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            },
            "osx": {
                "MIMode": "lldb"
            },
            "windows": {
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            }
        }
    ]
}